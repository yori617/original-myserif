<div class="text-center m-5">
  <h1>みんなのセリフ記録</h1>
</div>

<% if logged_in? %>
<div class="row">
  <div class="col-sm-4">
    <%= link_to "セリフを投稿する", new_myserif_path, class: 'btn btn-dark btn-lg' %>
  </div>

  <div class="col-sm-6">
<% @myserifs.each do |myserif| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(myserif.user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= link_to myserif.user.name, user_path(myserif.user) %> <span class="text-muted">posted at <%= myserif.created_at %></span>
        </div>
        <div>
          <p><%= myserif.content %></p>
        </div>
        <%= link_to '詳細へ', myserif_path(myserif), class: 'btn btn-secondary btn-sm' %>
      </div>
    </li>
 <% end %>
  </div>
</div>
<% else %>
<% @myserifs.each do |myserif| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(myserif.user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= link_to myserif.user.name, user_path(myserif.user) %> <span class="text-muted">posted at <%= myserif.created_at %></span>
        </div>
        <div>
          <p><%= myserif.content %></p>
        </div>
        <%= link_to '詳細へ', myserif_path(myserif), class: 'btn btn-secondary btn-sm' %>
      </div>
    </li>
 <% end %>
 <% end %>