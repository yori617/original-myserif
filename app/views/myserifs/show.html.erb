<div class="text-center m-5">
  <h1>セリフ詳細</h1>
</div>

<table class="table table-hover">
  <tr><th>セリフ</th><td><%= @myserif.content %></td></tr>
  <tr><th>映画タイトル</th><td><%= @myserif.title %></td></tr>
  <tr><th>人物</th><td><%= @myserif.character %></td></tr>
  <tr><th>ジャンル</th><td><%= @myserif.genre %></td></tr>
</table>

<div class="mt-3 row">
    <div class="col-sm-4">
    <% if current_user == @myserif.user %>
        <%= link_to "セリフ削除", @myserif, method: :delete, data: { confirm: "本当に削除しても良いですか？" }, class: "btn btn-danger" %>
        <%= link_to 'マイページに戻る', user_path(current_user), class: 'btn btn-secondary btn-sm' %>
    <% else %>
        <%= render "favorites/favorite_button", myserif: @myserif %>
        <%= link_to 'セリフ一覧へ戻る', myserifs_path, class: 'btn btn-secondary' %>
    <% end %>
    </div>
    
    <div class="col-sm-8">
        <%= render "comments/comment", comment: @comment %>
    </div>
</div>